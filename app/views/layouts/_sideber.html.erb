<div class="row my-5 pl-2">
  <div class="col-12">
    <% if admin_signed_in? %>
      <% if request.fullpath.include?("/admin")%>
      <!--adminログイン後のリンク-->
        <%= link_to admin_genres_path,style: "color: #3e8d92;" do %>
          <i class="fa-solid fa-tags"></i>ジャンル一覧
        <% end %>
      <% end %>
    <% else user_signed_in? %>
      <% unless request.fullpath.include?("/admin") %>
      <!--userログイン後のリンク-->
        <%= link_to genres_path,style: "color: #3e8d92;" do %>
          <i class="fa-solid fa-tags"></i>ジャンル一覧
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="col-11">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th>
            <span class="genre_counter">
              <%= genres.count %>
            </span>
          </th>
        </tr>
      </thead>
      <tbody>
        <% genres.each do |genre| %>
          <tr>
            <td>
              <% if admin_signed_in? %>
                <% if request.fullpath.include?("/admin")%>
                  <!--adminログイン後のリンク-->
                  <%= link_to "#{genre.name}", admin_genre_path(genre),style: "color: #3e8d92;"%>
                <% end %>
              <% else user_signed_in? %>
                <% unless request.fullpath.include?("/admin") %>
                  <!--userログイン後のリンク-->
                  <%= link_to "#{genre.name}", genre_path(genre),style: "color: #3e8d92;"%>
                <% end %>
              <% end %>
            </td>
            <td>
              <span class="genre_counter">
                <%= genre.posts.count %>
              </span>
            </td>
          </tr>
        <% end %>
        <div class="row justify-content-center mb-5">
          <div class="col-6">
            <%= paginate @genres %>
          </div>
        </div>
      </tbody>
    </table>
  </div>
  <% unless admin_signed_in? %>
    <div class="col-12 my-3">
      <%= link_to new_post_path, style: "color: #3e8d92;" do %>
        <i class="fa-solid fa-pen"></i> 新規投稿
      <% end %>
    </div>

    <div class="col-12 mb-3">
      <%= link_to posts_path,style: "color: #3e8d92;" do %>
        <i class="fa-regular fa-rectangle-list"></i> 投稿一覧
      <% end %>
    </div>

    <div class="col-12 mb-3">
      <%= link_to users_path, style: "color: #3e8d92;" do %>
        <i class="fa-solid fa-users"></i> ユーザー一覧
      <% end %>
    </div>
  <% end %>
</div>