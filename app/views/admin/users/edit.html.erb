<div class="row justify-content-center">
  <div class="col-12 col-lg-6">
    <h5>プロフィールの変更</h5>
    <%= render 'layouts/errors', obj: @user %>
    <%= form_with model: @user,url: admin_user_path, method: :patch do |f| %>
      <div class="form-group">
        <%= f.label "プロフィール画像" %>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.label "ユーザー名" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
       <div class="form-group">
        <%= f.label "自己紹介" %>
        <%= f.text_area :introduction, row: "5", class: "form-control" %>
      </div>
      <div class="row justify-content-between">
        <div class="col-lg-4">
          <%= f.label :is_active, "会員ステータス" %>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "有効", { value: :true } %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "退会", { value: :false } %>
        </div>
        <div class="col-lg-3 text-right"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
      </div>
    <% end %>
  </div>
</div>