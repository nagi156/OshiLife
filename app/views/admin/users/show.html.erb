<h5 class="text-center mb-5">プロフィール</h5>
<div class="row justify-content-center mb-4">
  <div class="col-12 col-md-10 col-lg-8">
    <div class="row justify-content-center">
      <div class="col-4 text-center">
        <%= image_tag @user.get_profile_image, size: "70x70", style: 'border-radius: 50%', class: "border border-dark-subtle" %>
      </div>
      <div class="col-8 text-center">
        <div class="row">
          <div class="user_name col-5 col-md-5 col-lg-5">
            <h5><%= @user.name %></h5>
          </div>
          <div class="edit_btn col-7 col-md-5 col-lg-5">
            <% unless @user.guest_user? %>
              <%= link_to edit_admin_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
                編集　<i class="fa-solid fa-gears"></i>
              <% end %>
              <span class="">会員ステータス</span>
              <% if @user.is_active? %>
                <span class="text-success"><strong>有効</strong></span>
              <% else %>
                <span class="text-muted"><strong>退会</strong></span>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="row justify-content-center my-4">
      <div class="col-8"><%= @user.introduction %></div>
    </div>
    <h4 class="text-center">投稿一覧</h4>
    <div class="row justify-content-center d-flex flex-wrap">
      <% if @posts.exists? %>
        <%= render 'admin/homes/index', posts: @posts %>
      <% else %>
        <h6>投稿はされていません</h6>
      <% end %>
    </div>
  </div>
</div>