<div class="row">
  <div class="col-12">
    <div class="row-6 row-lg-12 d-flex">
      <div class="col-5 col-lg-4">
        <%= image_tag @post.get_complete_image, size: "200x200",class: "border border-dark-subtle" %>
      </div>
      <div class="flex-grow-1 ms-3 text-center col-6 col-lg-9">
        <div class="col-7 col-lg-8 text-left">
          <%= link_to admin_user_path(@post.user) do %>
            <%= image_tag @post.user.get_profile_image, size: "80x80", style: 'border-radius: 50%', class: "border border-dark-subtle" %>
            <span class="mx-3"><%= @post.user.name %></span>
          <% end %>
          <div class="text-right">
              <%= link_to "編集",edit_admin_post_path(@post), class: "btn btn-sm btn-success" %>
              <%= link_to "削除", @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
          </div>
          <h4 class="mb-4"><%= @post.title %></h4>
          <div class="row">
            <div class="col-2 col-lg-3">材料</div>
            <div class="col-10 col-lg-9"><%= render partial: 'material_list', locals:{ materials: @post.materials} %></div>
          </div>
        </div>
      </div>
    </div>
    <div class="row-12 my-3">
      <h5>作り方</h5>
      <%= render partial: 'recipe_list', locals:{ recipes: @post.recipes} %>
    </div>
    <!--コメント数-->
    <div class="row">
      <div class="col-12 col-lg-6">
        コメント数 <%= @post.comments.count %>
      </div>
    </div>
     <%= render 'admin/comments/index', post: @post %>
  </div>
</div>