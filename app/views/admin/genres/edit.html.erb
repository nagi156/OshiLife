<h4 class="text-center my-5">ジャンル編集</h4>
<div class="row justify-content-center my-4">
  <div class="card col-11 col-md-10">
    <div class="mt-5">
      <%= render 'layouts/errors', obj: @genre %>
    </div>
    <div class="d-flex justify-content-center mb-5">
      <%= form_with model: @genre, url: admin_genre_path(@genre) do |f| %>
        <%= f.label "ジャンル名" %>
        <%= f.text_field :name %>
        <%= f.submit "更新", class: "btn btn_post" %>
      <% end %>
    </div>
  </div>
</div>