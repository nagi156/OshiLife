<h4 class="text-center my-5">ジャンル一覧</h4>
<div class="row justify-content-center my-4">
  <div class="card col-11 col-md-10">
    <div class="mt-3">
      <%= render 'layouts/errors', obj: @genre %>
    </div>
    <div class="d-flex justify-content-center my-5">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <%= f.label "ジャンル名" %>
        <%= f.text_field :name %>
        <%= f.submit "登録", class: "btn btn_post" %>
      <% end %>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>ジャンル名</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn_post" %></td>
            <td><%= link_to "削除", admin_genre_path(genre), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn_delete" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>