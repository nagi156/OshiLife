<div class="row justify-content-center">
  <div class="card col-11 col-md-9 col-lg-8 justify-content-center">
    <h4 class="my-5 text-center">新規登録</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group d-flex">
          <div class="col-5 col-md-4 col-lg-3 text-center p-0"><%= f.label "アカウント名" %></div>
          <div class="col-7 col-md-8 col-lg-7">
            <%= f.text_field :name, autofocus: true, placeholder: "山田　太郎", class: "form-control" %>
          </div>
        </div>

        <div class="form-group d-flex">
          <div class="col-5 col-md-4 col-lg-3 text-center p-0"><%= f.label "メールアドレス" %></div>
          <div class="col-7 col-md-8 col-lg-7">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example", class: "form-control" %>
          </div>
        </div>

        <div class="form-group d-flex">
          <div class="col-5 col-md-4 col-lg-3 text-center p-0"><%= f.label "パスワード" %><br>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %>
          </div>
          <div class="col-7 col-md-5 col-lg-3">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group d-flex">
          <div class="col-5 col-md-4 col-lg-3 text-center p-0"><%= f.label "パスワード" %><br>
            <em>(再入力用)</em>
          </div>
          <div class="col-7 col-md-5 col-lg-3">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group d-flex">
          <div class="col-12 text-center">
            <%= f.check_box :registration_check %>
            <%= link_to "利用規約に同意する", terms_of_service_path, style: "color: #56c4cc;" %>
          </div>
        </div>

        <div class="col-12 d-flex justify-content-center my-4">
          <%= f.submit "新規登録", class: "btn btn_sign_up" %>
        </div>
      <% end %>
  </div>
  <div class="col-11 my-5 text-center">
    <%= render "public/shared/links" %>
  </div>
</div>
