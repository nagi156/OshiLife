<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10 justify-content-center my-5 mx-auto">

      <h4 class="my-5 text-center">新規登録</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group d-flex">
          <div class="col-3 text-center"><%= f.label "アカウント名" %></div>
          <div class="col-7">
            <%= f.text_field :name, autofocus: true, placeholder: "山田　太郎", class: "form-control" %>
          </div>
        </div>

        <div class="form-group d-flex">
          <div class="col-3 text-center"><%= f.label "メールアドレス" %></div>
          <div class="col-7">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example", class: "form-control" %>
          </div>
        </div>

        <div class="form-group d-flex">
          <div class="col-3 text-center"><%= f.label "パスワード" %><br>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %>
          </div>
          <div class="col-5">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group d-flex">
          <div class="col-3 text-center"><%= f.label "パスワード(再入力)" %></div>
          <div class="col-5">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="col-12 d-md-flex justify-content-center">
          <%= f.submit "新規登録", class: "btn btn-outline-success" %>
        </div>
      <% end %>
      <div class="col-12 my-5 text-center">
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>
