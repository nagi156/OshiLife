<div class="row justify-content-around d-flex mb-3">
  <div class="col-3 col-md-4 col-lg-3 text-center">
    <% if @user == current_user %>
      <%= link_to "戻る", my_page_path, class: "btn btn_return" %>
    <% else %>
      <%= link_to "戻る", user_path(@user), class: "btn btn_return" %>
    <% end %>
  </div>
  <h4 class="col-4 col-md-5 col-lg-3 text-center">フォロー一覧</h4>
  <div class="col-3"><br></div>
</div>
<div class="row justify-content-center">
  <div class="col-12 col-md-10 col-lg-6">
    <% if @users.present? %>
      <%= render 'public/users/index', users: @users %>
    <% else %>
      <h6 class="text-center mt-5">フォローはしていません</h6>
    <% end %>
  </div>
</div>