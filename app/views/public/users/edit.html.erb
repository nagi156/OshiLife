<div class="row justify-content-md-center mt-4">
  <div class="col-12 col-md-10 col-lg-8">
    <div class="card shadow">
      <div class="card-body">
        <h5 class="mb-4">プロフィールの変更</h5>
        <%= render 'layouts/errors', obj: @user %>
        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <%= f.label "プロフィール画像" %>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
          <div class="form-group">
            <%= f.label "ユーザー名" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
           <div class="form-group">
            <%= f.label "自己紹介" %>
            <%= f.text_area :introduction, row: "5", class: "form-control" %>
          </div>
          <div class="row justify-content-between">
            <div class="col-6 col-md-5 col-lg-3"><%= f.submit "保存", class: "btn btn_post" %></div>
            <div class="col-6 col-md-5 col-lg-3 text-right"><%= link_to "退会する", unsubscribe_path, class: "btn btn_delete" %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>