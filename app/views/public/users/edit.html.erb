<div class="row justify-content-around d-flex mb-3">
  <div class="col-3 col-md-4 col-lg-3 text-center">
    <%= link_to "戻る", my_page_path, class: "btn btn_return" %>
  </div>
  <h4 class="col-4 col-md-5 col-lg-3 text-center">プロフィールの変更</h4>
  <div class="col-3"><br></div>
</div>

<div class="row justify-content-md-center mt-4">
  <div class="col-12 col-md-10 col-lg-9">
    <div class="card shadow">
      <div class="card-body">
        <%= render 'layouts/errors', obj: @user %>
        <%= form_with model: @user do |f| %>
          <div class="form-group row">
            <%= f.label "プロフィール画像",class: "col-12 col-md-4 col-lg-4 col-form-label" %>
            <%= f.file_field :profile_image, accept: "image/*",class: "col-12 col-md-8 col-lg-8" %>
          </div>
          <div class="form-group">
            <%= f.label "ユーザー名" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
           <div class="form-group">
            <%= f.label "自己紹介" %>
            <%= f.text_area :introduction, row: "5", class: "form-control" %>
          </div>
          <div class="row justify-content-between">
            <div class="col-6 col-md-5 col-lg-3"><%= f.submit "保存", class: "btn btn_post" %></div>
            <div class="col-6 col-md-5 col-lg-3 text-right"><%= link_to "退会する", unsubscribe_path, class: "btn btn_delete" %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>