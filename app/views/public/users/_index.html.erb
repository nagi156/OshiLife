<table class="table w-100">
  <thead>
    <tr>
      <th class="w-30">ユーザー一覧</th>
      <th class="w-50"></th>
      <th class="w-20"></th>
      </th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <% if user.is_active? %>
          <% if user == current_user %>
            <td>
              <%= link_to my_page_path do %>
                <%= image_tag user.get_profile_image, size: "80x80", style: 'border-radius: 50%', class: "border border-dark-subtle" %>
                <%= user.name %>
              <% end %>
            </td>
            <td><%= user.introduction %></td>
          <% else %>
            <td>
              <%= link_to user_path(user) do %>
                <%= image_tag user.get_profile_image, size: "80x80", style: 'border-radius: 50%', class: "border border-dark-subtle" %>
                <%= user.name %>
              <% end %>
            </td>
             <td><%= user.introduction %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>