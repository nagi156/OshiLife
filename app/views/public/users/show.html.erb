<h5 class="text-center mb-5">プロフィール</h5>
<div class="row justify-content-center">
  <div class="col-12 col-md-10 col-lg-8">
    <div class="row justify-content-center">
      <div class="col-md-2">
        <%= image_tag @user.get_profile_image, size: "70x70", style: 'border-radius: 50%', class: "border border-dark-subtle" %>
      </div>
      <div class="col-md-6 text-center">

        <div class="row">
          <div class="user_name col-5 col-md-5 col-lg-5"><h5><%= @user.name %></h5></div>

          <div class="follow_btn col-7 col-md-5 col-lg-5">
            <!--フォローボタンを導入予定-->
            <%= render 'public/relationships/follow_btn', user: @user %>
          </div>

        </div>
      </div>
    </div>
    <div class="row justify-content-center my-4">
      <div class="col-8"><%= @user.introduction %></div>
      <div class="col-2">
        <%= link_to likes_user_path(@user),class: "btn" do %>
          <i class="fa-solid fa-thumbs-up"></i> いいね一覧
        <% end %>
      </div>
    </div>
  </div>
</div>
<h4 class="text-center">投稿一覧</h4>
<div class="row justify-content-center d-flex flex-wrap">
  <% if @posts.exists? %>
    <%= render 'public/posts/index', posts: @posts %>
  <% else %>
    <h6>投稿はされていません</h6>
  <% end %>
</div>