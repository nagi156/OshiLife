<h5 class="text-center">プロフィール</h5>
<div class="row justify-content-center mb-4">
  <div class="col-12 col-md-10 col-lg-8">
    <div class="row justify-content-center">
      <div class="col-md-2">
        <%= image_tag @user.get_profile_image, size: "80x80", style: 'border-radius: 50%', class: "border border-dark-subtle" %>
      </div>
      <div class="col-md-6 text-center">
        <div class="row">
          <div class="user_name col-7"><h5><%= @user.name %></h5></div>

          <div class="follow_btn col-5">
            <!--フォローボタンを導入予定-->
          </div>

        </div>
      </div>
    </div>
    <div class="row justify-content-center my-4">
      <div class="col-8"><%= @user.introduction %></div>
    </div>
    <h4 class="text-center">投稿一覧</h4>
    <div class="row justify-content-center d-flex flex-wrap">
      <% if @posts.exists? %>
        <%= render 'public/posts/index', posts: @posts %>
      <% else %>
        <h6>投稿はされていません</h6>
      <% end %>
    </div>
  </div>
</div>