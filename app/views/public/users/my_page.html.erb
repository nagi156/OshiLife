<div class="container">
  <div class="row justify-content-center mb-4">
    <div class="col-3">
      <%= render 'layouts/side_bar' %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h5>プロフィール</h5>
      <div class="row">
        <div class="col-md-2">
          <%= image_tag @user.get_profile_image, size: "80x80", style: 'border-radius: 50%', class: "border border-dark-subtle" %>
        </div>
        <div class="col-md-6 text-center">
          <div class="row">
            <div class="col-7"><h5><%= @user.name %></h5></div>
            <div class="col-5">
              <% unless @user.guest_user? %>
                <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
                  編集　<i class="fa-solid fa-gears"></i>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row justify-content-center my-4">
        <div class="col-8"><%= @user.introduction %></div>
      </div>
      <h4>投稿一覧</h4>
      <div class="row justify-content-center">
        <%= render 'public/posts/index', posts: @posts %>
      </div>
    </div>
  </div>
</div>