<div class="container">
  <div class="row justify-content-center mb-4">
    <h5>プロフィール</h5>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-2">
      <%= image_tag @user.get_profile_image, size: "80x80", style: 'border-radius: 50%', class: "border border-dark-subtle" %>
    </div>
    <div class="col-md-6 text-center">
      <div class="row justify-content-between">
        <div class="col-4"><h5><%= @user.name %></h5></div>
        <div class="col-6">
          <% unless @user.guest_user? %>
            <%= link_to edit_user_path(@user), class: "btn btn-lg btn-outline-secondary btn-block" do %>
              編集　<i class="fa-solid fa-gears"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-center my-4">
    <div class="col-8"><%= @user.introduction %></div>
  </div>
  <div class="row justify-content-center">
    <%= render 'public/posts/index', posts: @posts %>
  </div>
</div>