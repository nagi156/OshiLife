<div class="row justify-content-center mb-4">
  <div class="col-md-3">
    <%= render 'layouts/side_bar' %>
  </div>
  <div class="col-md-9">
    <h5>プロフィール</h5>
    <div class="row">
      <div class="col-md-2">
        <%= image_tag @user.get_profile_image, size: "80x80", style: 'border-radius: 50%', class: "border border-dark-subtle" %>
      </div>
      <div class="col-md-6 text-center">
        <div class="row">
          <div class="user_name col-7"><h5><%= @user.name %></h5></div>
          <div class="edit_btn col-5">
            <% unless @user.guest_user? %>
              <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
                編集　<i class="fa-solid fa-gears"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="row justify-content-center my-4">
      <div class="col-8"><%= @user.introduction %></div>
    </div>
    <h4>投稿一覧</h4>
    <div class="row">
      <% if @posts.exists? %>
        <%= render 'public/posts/index', posts: @posts %>
      <% else %>
        <h6>投稿はされていません</h6>
      <% end %>
    </div>
  </div>
</div>