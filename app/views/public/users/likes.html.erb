<div class="row justify-content-around d-flex my-5">
  <div class="col-3 col-md-4 col-lg-3 text-center">
    <% if @user == current_user %>
      <%= link_to "戻る", my_page_path, class: "btn btn_return" %>
    <% else %>
      <%= link_to "戻る", user_path(@user), class: "btn btn_return" %>
    <% end %>
  </div>
  <h4 class="col-4 col-md-5 col-lg-3 text-center">いいね一覧</h4>
  <div class="col-3"><br></div>
</div>

<div class="row justify-content-center d-flex flex-wrap">
  <% if @like_list.present? %>
    <%= render 'public/posts/index', posts: @like_list %>
  <% else %>
    <h6 class="mt-3">いいねはされていません</h6>
  <% end %>
</div>

<div class="row justify-content-center my-3">
  <div class="col-6">
    <%= paginate @like_list %>
  </div>
</div>
