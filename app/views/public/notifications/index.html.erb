<div class="row justify-content-center">
    <div class="col-md-8">
      <h4 class="text-center my-5">通知一覧</h4>
      <div class="mb-3">
        <% if @notifications.present? %>
          <%= link_to "全削除", notification_path(@notifications), method: :delete, class: "btn btn_delete float-md-end mb-3 mb-md-0" %>
          <% @notifications.each do |notification| %>
            <%= render notification.action_type, notification: notification %>
          <% end %>
        <% else %>
          通知はありません
        <% end %>
      </div>
      <div class="col-12">
        <%= paginate @notifications %>
      </div>
    </div>
  </div>
</div>