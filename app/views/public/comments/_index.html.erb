<table>
  <thead>
    <tr>
      <th>コメント一覧</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% post.comments.each do |comment| %>
        <% if comment.user_id == current_user.id %>
          <td>
            <%= link_to my_page_path do %>
              <%= image_tag comment.user.get_profile_image, size: "40x40", style: 'border-radius: 50%', class: "border border-dark-subtle" %>
              <%= comment.user.name %>
              <% end %>
        </td>
        <% else %>
          <td>
            <%= link_to user_path(comment.user) do %>
              <%= image_tag comment.user.get_profile_image, size: "40x40", style: 'border-radius: 50%', class: "border border-dark-subtle" %>
              <%= comment.user.name %>
            <% end %>
          </td>
        <% end %>
        <td><%= comment.comment %></td>
        <td>
          <%= link_to post_comment_path(comment.post, comment), method: :delete, class: "btn btn-sm btn-danger" do %>
            削除 <i class="fa-solid fa-trash-can"></i>
          <% end %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>