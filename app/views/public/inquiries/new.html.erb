<div class="row justify-content-center">
  <div class="col-11 col-md-10 col-lg-6 my-5">
    <%= render 'layouts/errors', obj: @inquiry %>

    <h4>お問い合わせフォーム</h4>

    <%= form_with model: @inquiry, url: inquiries_path do |f| %>
      <div class="form-group">
        <%= f.label "お問い合わせ内容" %>
        <%= f.text_field :title, class: "form-control", placeholder: "例) 投稿方法について" %>
      </div>

      <div class="form-group">
        <%= f.label "お問い合わせ詳細" %>
        <%= f.text_area :message, row: "5", class: "form-control", placeholder: "例) 投稿の仕方がわからないので教えて欲しい。" %>
      </div>
      <div class="form-group text-right">
        <%= f.submit "送信", class: "btn btn_post" %>
      </div>
    <% end %>
  </div>
</div>