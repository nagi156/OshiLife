<div class="nested-fields">
  <div class="row">
    <div class="col-5">
      <div class="row">
        <div class="col-8">
          <div class="form-group">
            <%= f.label "材料" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="col-4">
          <div class="form-group">
            <%= f.label "数量" %>
            <%= f.select :amount, *[1..20] %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-2 my-5">
      <%= link_to_remove_association "削除", f, class: "btn btn-outline-danger", :remote => true%>
    </div>
  </div>
</div>