<div class="nested-fields">
  <div class="d-flex flex-wrap form-group g-3">
      <div class="form-group col-12">
        <div class="row">
          <%= f.label "作り方",class: "col-12 col-md-2 col-form-label"  %>
          <%= f.file_field :recipe_image, accept: "image/*", class: "col-12 col-md-10" %>
        </div>
      </div>
      <div class="form-group col-12 col-md-8 offset-md-2">
        <div class="row">
          <%= f.text_area :instructions, row: "5", class: "form-control", placeholder: "作り方をお書きください" %>
        </div>
      </div>
      <div class="form-group col-12 col-md-2">
        <div class="row">
          <div class="col-12 d-flex justify-content-end">
            <%= link_to_remove_association "削除", f, class: "btn btn_delete", remote: true %>
          </div>
        </div>
      </div>
  </div>
</div>