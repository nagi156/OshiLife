<div class="nested-fields">
  <div class="form-group row">
      <%= f.label "作り方",class: "col-4 col-form-label"  %>
      <%= f.file_field :recipe_image, accept: "image/*" %>
  </div>
  <div class="form-group row">
    <%= f.text_area :instructions, row: "5", class: "col-9 offset-1 form-control",placeholder: "作り方をお書きください" %>
    <div class="col-2">
      <%= link_to_remove_association "削除", f, class: "btn btn-outline-danger", :remote => true%>
    </div>
  </div>
</div>