<div class="nested-fields">
  <div class="form-group row">
      <%= f.label "作り方",class: "col-3 col-form-label"  %>
      <%= f.file_field :recipe_image, accept: "image/*",class: "col-9" %>
  </div>
  <div class="form-group row justify-content-end">
    <%= f.text_area :instructions, row: "5", class: "col-7 offset-2 form-control", placeholder: "作り方をお書きください" %>
    <div class="col-3 text-center">
      <%= link_to_remove_association "削除", f, class: "btn btn-outline-danger", :remote => true%>
    </div>
  </div>
</div>