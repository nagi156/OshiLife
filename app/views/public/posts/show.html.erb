<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/side_bar' %>
    </div>
    <div class="col-md-8 offset-md-1">
      <div class="row-12">
        <div class="d-flex align-items-center">
          <div class="flex-shrink-0">
            <%= image_tag @post.get_complete_image, size: "200x200",class: "border border-primary" %>
          </div>
          <div class="flex-grow-1 ms-3 text-center">
            <div class="text-right">
              <%= link_to "編集",edit_post_path(@post), class: "btn btn-sm btn-success" %>
              <%= link_to "削除", @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
            </div>
            <h3><%= @post.title %></h3>
            <%= render partial: 'material_list', locals:{ materials: @post.materials} %>
          </div>
        </div>
      </div>
        <div class="row-12 my-3">
          <%= render partial: 'recipe_list', locals:{ recipes: @post.recipes} %>
        </div>
    </div>
  </div>
</div>