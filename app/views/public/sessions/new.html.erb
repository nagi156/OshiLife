<div class="row justify-content-center">
  <div class="col-12 col-md-10 col-lg-6 justify-content-center mx-auto">
    <h4 class="my-5 text-center">ログイン</h4>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group d-flex">
        <div class="col-4 col-md-3 col-lg-3 p-0"><%= f.label "メールアドレス" %></div>
        <div class="col-8 col-md-9 col-lg-9">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example", class: "form-control" %>
        </div>
      </div>

      <div class="form-group d-flex">
        <div class="col-4 col-md-3 col-lg-3 p-0"><%= f.label "パスワード" %></div>
        <div class="col-8 col-md-9 col-lg-9">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>

      <div class="col-12 text-center">
        <%= f.submit "ログイン", class: "btn btn-outline-success mt-3" %>
      </div>
    <% end %>
  </div>
  <div class="col-12 my-5 text-center">
    <%= render "public/shared/links" %>
  </div>
</div>
