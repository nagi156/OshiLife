<div class="row justify-content-center">
  <div class="col-11 col-md-19 col-lg-6 justify-content-center card">

    <h4 class="mt-3 mb-5 text-center">ログイン</h4>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group d-flex mb-5">
        <div class="col-5 col-md-3 col-lg-3 p-0 text-center"><%= f.label "メールアドレス" %></div>
        <div class="col-7 col-md-9 col-lg-9">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example", class: "form-control" %>
        </div>
      </div>

      <div class="form-group d-flex">
        <div class="col-5 col-md-3 col-lg-3 p-0 text-center"><%= f.label "パスワード" %></div>
        <div class="col-7 col-md-9 col-lg-9">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>

      <div class="col-12 text-center my-4">
        <%= f.submit "ログイン", class: "btn btn_sign_in" %>
      </div>
    <% end %>
  </div>
  <div class="col-12 my-5 text-center">
    <%= render "public/shared/links" %>
  </div>
</div>
