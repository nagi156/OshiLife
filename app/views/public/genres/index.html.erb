<div class="row justify-content-center my-5">
  <div class="card col-11 col-md-9">
    <h4 class="text-center my-3">ジャンル一覧</h4>
    <table class="table">
      <thead>
        <tr>
          <th class="text-center">ジャンル名</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @main_genres.each do |genre| %>
          <tr>
            <td class="text-center">
              <%= link_to "#{genre.name}", genre_path(genre),style: "color: #3e8d92;"%>
            </td>
            <td>
              <span class="genre_counter">
                <%= genre.posts.count %>
              </span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="row justify-content-center">
      <div class="col-6">
        <%= paginate @main_genres %>
      </div>
    </div>
  </div>
</div>