<h4 class="text-center">ジャンル一覧</h4>
<div class="row justify-content-center my-4">
  <div class="card col-12 col-md-9">
    <table class="table">
      <thead>
        <tr>
          <th>ジャンル名</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to "#{genre.name}", genre_path(genre),style: "color: #3e8d92;"%>
            </td>
            <td>
              <span class="genre_counter">
                <%= genre.posts.count %>
              </span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row justify-content-center mb-5">
  <div class="col-6">
    <%= paginate @genres %>
  </div>
</div>